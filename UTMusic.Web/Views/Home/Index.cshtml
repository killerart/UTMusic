	ViewBag.Title = "Home";
}
<div class="container-md px-md-5">
	<div class="row">
		<div class="container">
			<div class="column add-bottom">
				<div id="mainwrap">
					<div id="nowPlay">
						<span id="npAction">Paused...</span><span id="npTitle"></span>
					</div>
					<div id="audiowrap">
						<div id="audio0">
